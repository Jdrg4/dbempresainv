@model Inventario.Models.ViewModels.CategoriaViewModel
@{
    ViewBag.Title = "Añadir Categoría";    
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Add", "Categoria", FormMethod.Post, new { role = "form", @class = "" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationMessage("error", new { @class = "text-danger" })

            @Html.LabelFor(x => x.Nombre)
            @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Nombre)

            @Html.LabelFor(x => x.Descripcion)
            @Html.TextBoxFor(x => x.Descripcion, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Descripcion)

            <div style="text-align: right;">
                <input type="submit" value="Guardar" class="btn btn-success"/>
            </div>
        }
    </div>
</div>

