@model List<Inventario.Models.TableViewModels.UserTableViewModel>
@{
    ViewBag.Title = "Usuarios";
}

@if (ViewBag.Message != null)
{   
    <br />
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>  
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-12">
        <input type="button" class="btn btn-primary" onclick="document.location.href = '@Url.Content("~/User/Add")'" value="Nuevo" />
    </div>
</div>
<br />

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>#</th>
                <th>Documento</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Correo</th>
                <th></th>
            </tr>

            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.Id</td>
                    <td>@oElemento.Documento</td>
                    <td>@oElemento.Nombre</td>
                    <td>@oElemento.Apellido</td>
                    <td>@oElemento.Correo</td>
                    <td>
                        <input onclick="document.location.href = '@Url.Content("~/User/Edit/"+oElemento.Id)'" type="button" value="Editar" class="btn btn-default" />
                        <input onclick="jsDelete(@oElemento.Id);" type="button" value="Eliminar" class=" btn btn-danger" />
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

@section scripts
{
    <script>
        function jsDelete(id) {
            if (confirm("¿Eliminar este usuario?")) {
                url = "@Url.Content("~/User/Delete")" + "/" + id;
                $.post(url, function (data) {
                    if (data == "1") {
                        document.location.href = "@Url.Content("~/User/")";
                    } else {
                        alert("Ocurrió un error :(")
                    }
                })
            }
        }
    </script>
}

