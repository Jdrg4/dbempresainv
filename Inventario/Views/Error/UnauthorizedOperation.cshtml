
@{
    ViewBag.Title = "UnauthorizedOperation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>Error, No Tienes Permiso</h1>
</section>

<section class="content">
    <div class="error-page">
        <h2 class="headline text-red">Error</h2>
        <div class="error-content">
            <h3>
                <i class="fade fa-warning text-red"></i>
                Sin Autorizacion
            </h3>
            @if(ViewBag.operacion != "")
            {
                <p>Operación @ViewBag.operacion</p>
            }
            @if (ViewBag.modulo != "")
            {
                <p>Modulo @ViewBag.modulo</p>
            }
            @if(ViewBag.msjeErrorExcepcion != "")
            {
                <p>@ViewBag.msjeErrorExcepcion</p>
            }
        </div>
    </div>
</section>

